# Nginx Configuration for Elite Design (elitedesign.co.il)
# Optimized for Performance, Security, and SEO

# Redirect HTTP to HTTPS
server {
    listen 80;
    listen [::]:80;
    server_name elitedesign.co.il www.elitedesign.co.il;
    return 301 https://elitedesign.co.il$request_uri;
}

# Redirect www to non-www (SEO recommendation)
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name www.elitedesign.co.il;

    # SSL certificates (managed by Let's Encrypt / Certbot)
    ssl_certificate /etc/letsencrypt/live/elitedesign.co.il/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/elitedesign.co.il/privkey.pem;

    return 301 https://elitedesign.co.il$request_uri;
}

# Main Server Block
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name elitedesign.co.il;

    root /var/www/elitedesign/dist;
    index index.html;

    # SSL certificates
    ssl_certificate /etc/letsencrypt/live/elitedesign.co.il/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/elitedesign.co.il/privkey.pem;

    # Modern SSL configuration
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_prefer_server_ciphers on;
    ssl_ciphers ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-ECDSA-CHACHA20-POLY1305:ECDHE-RSA-CHACHA20-POLY1305:DHE-RSA-AES128-GCM-SHA256:DHE-RSA-AES256-GCM-SHA384;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 1d;
    ssl_stapling on;
    ssl_stapling_verify on;

    # Security Headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header Referrer-Policy "no-referrer-when-downgrade" always;
    add_header Content-Security-Policy "default-src 'self' https: data: 'unsafe-inline' 'unsafe-eval'; img-src 'self' https: data: blob:;" always;
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains; preload" always;

    # Gzip Compression
    gzip on;
    gzip_vary on;
    gzip_proxied any;
    gzip_comp_level 6;
    gzip_types text/plain text/css text/xml application/json application/javascript application/rss+xml application/atom+xml image/svg+xml;

    # Healthcheck endpoint
    location /health {
        access_log off;
        add_header 'Content-Type' 'application/json';
        return 200 '{"status":"up","timestamp":"$date_gmt"}';
    }

    # Static Assets (Images, Fonts, JS/CSS files)
    # Cache for 1 year
    location ~* \.(?:ico|css|js|gif|jpe?g|png|svg|woff2?|eot|ttf|otf|webp|avif|mp4|webm)$ {
        expires 1y;
        add_header Cache-Control "public, no-transform";
        access_log off;
    }

    # HTML files
    # Cache for 1 day
    location ~* \.html$ {
        expires 1d;
        add_header Cache-Control "public, no-transform";
    }

    # SPA Routing (Fallthrough to index.html)
    location / {
        try_files $uri $uri/ /index.html;
    }

    # Custom Error Pages
    error_page 404 /index.html;
}
